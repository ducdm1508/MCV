@model bai1.models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title">@Model.Name</h5>
        </div>
        <div class="card-body">
            <p class="card-text"><strong>ID:</strong> @Model.Id</p>
            <p class="card-text"><strong>Giá:</strong> @Model.Price.ToString("C")</p>
        </div>
        <div class="card-footer">
            <a asp-controller="Product" asp-action="Product" class="btn btn-secondary">Quay về danh sách</a>
        </div>
    </div>
</div>