@model shopapp.Models.Product

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded shadow-sm"
                 style="width:100%; max-height:400px; object-fit:contain;" />
        </div>

        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <h4 class="text-danger fw-bold">@Model.Price $</h4>

            <div class="mt-3">
                <button class="btn btn-primary btn-lg"
                        onclick="addToCart(@Model.Id, '@Model.Name', @Model.Price)">
                    Mua ngay
                </button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg">Quay lại</a>
            </div>
        </div>
    </div>
</div>

<script>
    function addToCart(id, name, price) {
        let product = { id: id, name: name, price: price };

        let cart = JSON.parse(localStorage.getItem("cart")) || [];
        cart.push(product);
        localStorage.setItem("cart", JSON.stringify(cart));

        alert(name + " đã được thêm vào giỏ hàng!");
    }
</script>
