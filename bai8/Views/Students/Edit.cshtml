@model bai8.Models.Student
@{
    var courses = ViewBag.Courses as List<bai8.Models.Course>;
}

<h2>Sửa Sinh viên</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <label>Họ và tên:</label>
    <input asp-for="FullName" /><br />

    <label>Ngày sinh:</label>
    <input asp-for="BirthDate" type="date" /><br />

    <label>Lớp:</label>
    <input asp-for="ClassName" /><br />

    <label>Chọn khóa học:</label><br />
    @foreach (var c in courses)
    {
        <input type="checkbox" name="selectedCourses" value="@c.Id"
        @(Model.Courses.Any(sc => sc.Id == c.Id) ? "checked" : "") />
        @c.CourseName <br />
    }

    <button type="submit">Cập nhật</button>
</form>
